QWidget{background-color: #2c3e50; color: white;}
QScrollBar:horizontal {border: none; background: #34495e; height: 14px; margin: 0px 16px 0 16px;}
QScrollBar::handle:horizontal {background: #c0392b; min-width: 20px;}
QScrollBar::add-line:horizontal {background: #34495e; width: 16px; subcontrol-position: right; subcontrol-origin: margin;}
QScrollBar::sub-line:horizontal {background: #34495e; width: 16px; subcontrol-position: left; subcontrol-origin: margin;}
QScrollBar:vertical {border: none; background: #34495e; width: 14px; margin: 16px 0 16px 0;}
QScrollBar::handle:vertical {background: #c0392b; min-height: 20px;}
QScrollBar::add-line:vertical {background: #34495e; height: 16px; subcontrol-position: bottom; subcontrol-origin: margin;}
QScrollBar::sub-line:vertical {background: #34495e; height: 16px; subcontrol-position: top; subcontrol-origin: margin;}
QPushButton{background-color: #2980b9; color: white; border: none; padding: 5px 15px;}
QPushButton:hover{background-color: #3498db;}
QLineEdit{background-color: #34495e; color: white; border: 1px solid #313131; padding: 5px;}
QListWidget{background-color: #34495e; color: white; border: none;}
QListWidget::item:selected{background-color: #2980b9; color: white;}
QLabel{color: white;}